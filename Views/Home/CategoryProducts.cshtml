@model IEnumerable<dagstore.Models.Product>

@{
    ViewData["Title"] = ViewBag.CategoryName + " Ürünleri";
}

<div class="container py-5">
    <h2 class="text-center mb-4">@ViewBag.CategoryName Ürünleri</h2>
    
    <div class="row">
        @foreach (var product in Model)
        {
            <div class="col-md-3 mb-4">
                <div class="card h-100">
                    <img src="@product.ImageUrl" class="card-img-top" alt="@product.Name" style="height: 200px; object-fit: cover;">
                    <div class="card-body">
                        <h5 class="card-title">@product.Name</h5>
                        <p class="card-text text-primary">@product.Price.ToString("C2")</p>
                        <a asp-action="Details" asp-route-id="@product.Id" class="btn btn-primary">Detaylar</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div> 