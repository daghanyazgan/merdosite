@model dagstore.Models.Category

@{
    ViewData["Title"] = "Kategori Sil";
}

<div class="container">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card">
                <div class="card-body">
                    <h2 class="card-title text-danger">Kategori Sil</h2>
                    <hr />

                    <div class="alert alert-warning">
                        <h5>Bu kategoriyi silmek istediğinizden emin misiniz?</h5>
                        <p>Bu işlem geri alınamaz.</p>
                    </div>

                    <dl class="row">
                        <dt class="col-sm-3">Kategori Adı</dt>
                        <dd class="col-sm-9">@Model.Name</dd>

                        <dt class="col-sm-3">Açıklama</dt>
                        <dd class="col-sm-9">@Model.Description</dd>

                        <dt class="col-sm-3">Durum</dt>
                        <dd class="col-sm-9">
                            @if (Model.IsActive)
                            {
                                <span class="badge bg-success">Aktif</span>
                            }
                            else
                            {
                                <span class="badge bg-danger">Pasif</span>
                            }
                        </dd>
                    </dl>

                    <form asp-action="Delete" method="post">
                        <input type="hidden" asp-for="Id" />
                        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                            <a asp-action="Index" class="btn btn-secondary me-md-2">İptal</a>
                            <button type="submit" class="btn btn-danger">Sil</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div> 