@model dagstore.Models.Product

@{
    ViewData["Title"] = "Ürün Sil";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card shadow">
                <div class="card-header bg-danger text-white">
                    <h4 class="mb-0">Ürün Sil</h4>
                </div>
                <div class="card-body">
                    <div class="alert alert-warning">
                        <h5><i class="bi bi-exclamation-triangle-fill"></i> Uyarı!</h5>
                        <p>Bu ürünü silmek istediğinizden emin misiniz? Bu işlem geri alınamaz.</p>
                    </div>
                    
                    <div class="row mb-4">
                        <div class="col-md-4">
                            <img src="@(string.IsNullOrEmpty(Model.ImageUrl) ? "/images/no-image.jpg" : Model.ImageUrl)" 
                                 class="img-fluid rounded" alt="@Model.Name" />
                        </div>
                        <div class="col-md-8">
                            <h3>@Model.Name</h3>
                            <p><strong>Kategori:</strong> @Model.Category</p>
                            <p><strong>Fiyat:</strong> @Model.Price.ToString("C2")</p>
                            <p><strong>Stok:</strong> @Model.Stock</p>
                            <p><strong>Durumu:</strong> @(Model.IsActive ? "Aktif" : "Pasif")</p>
                        </div>
                    </div>
                    
                    <div class="row">
                        <div class="col-md-12">
                            <h5>Açıklama</h5>
                            <p>@Model.Description</p>
                        </div>
                    </div>
                    
                    <form asp-action="Delete" method="post" class="mt-4 text-center">
                        <input type="hidden" asp-for="Id" />
                        <button type="submit" class="btn btn-danger me-2">
                            <i class="bi bi-trash"></i> Ürünü Sil
                        </button>
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="bi bi-arrow-left"></i> Vazgeç
                        </a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div> 